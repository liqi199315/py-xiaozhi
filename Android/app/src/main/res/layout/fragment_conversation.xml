<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#050505">

    <!-- 背景装饰：网格或渐变 (模拟高科技背景) -->
    <!-- 背景装饰：网格 -->
    <com.eshowcaseai.app.ui.widget.GridBackgroundView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.3" />

    <!-- 背景波动特效 (Aura - Digital Human Speaking) -->
    <View
        android:id="@+id/viewAura"
        android:layout_width="600dp"
        android:layout_height="600dp"
        android:layout_centerInParent="true"
        android:alpha="0"
        android:background="@drawable/bg_aura_speaking" />

    <!-- 触摸波纹特效 (Touch Ripple - User Speaking) -->
    <View
        android:id="@+id/viewTouchRipple"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/bg_ripple_red"
        android:visibility="invisible"
        android:alpha="0.8" />

    <!-- Live2D 角色展示 -->
    <com.eshowcaseai.app.core.live2d.Live2DView
        android:id="@+id/live2dView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topBar"
        android:layout_above="@+id/bottomArea"
        android:layout_marginTop="-20dp" />

    <!-- 顶部栏 (透明科技感) -->
    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:paddingHorizontal="16dp"
        android:background="#40000000">

        <ImageButton
            android:id="@+id/btnBackFromChat"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_revert"
            app:tint="#00F3FF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="eShowcase AI 對話"
            android:textColor="#00F3FF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:shadowColor="#8000F3FF"
            android:shadowRadius="10" />
            
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@android:color/darker_gray"
            android:alpha="0.2" />
    </RelativeLayout>

    <!-- 对话展示区 (悬浮字幕样式) -->
    <FrameLayout
        android:id="@+id/commArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomArea"
        android:layout_marginBottom="24dp"
        android:paddingHorizontal="24dp"
        android:clipChildren="false">

        <!-- 背景框 (科技感边框) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_tech_panel"
            android:orientation="vertical"
            android:padding="20dp"
            android:elevation="4dp">
            
            <TextView
                android:id="@+id/txtChatResponse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="WAITING FOR SIGNAL..."
                android:textColor="#E0FFFF"
                android:textSize="16sp"
                android:fontFamily="sans-serif-light"
                android:shadowColor="#4000F3FF"
                android:shadowRadius="8"
                android:lineSpacingExtra="4dp" />
        </LinearLayout>

        <!-- 浮动标签 -->
        <TextView
            android:id="@+id/txtCommLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:background="#050505"
            android:paddingHorizontal="12dp"
            android:text="INCOMING TRANSMISSION"
            android:textColor="#00F3FF"
            android:textSize="10sp"
            android:fontFamily="monospace"
            android:letterSpacing="0.1" />
    </FrameLayout>

    <!-- 底部控制区 (悬浮面板) -->
    <LinearLayout
        android:id="@+id/bottomArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/bg_tech_panel"
        android:layout_margin="16dp"
        android:elevation="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnChatVoice"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"
            android:text="按住說話"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="@null"
            android:background="@drawable/bg_neon_button"
            app:cornerRadius="28dp"
            app:icon="@android:drawable/ic_btn_speak_now"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="#FFFFFF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edtChatInput"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/bg_chat_input_tech"
                android:hint="輸入文字..."
                android:paddingHorizontal="16dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#66FFFFFF"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/btnChatSend"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/bg_neon_button"
                android:src="@android:drawable/ic_menu_send"
                app:tint="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>

    <!-- 加载/激活遮罩层 (全屏模糊感) -->
    <RelativeLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2050505"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/pbLoading"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:indeterminateTint="#00F3FF" />

            <TextView
                android:id="@+id/txtLoadingStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="正在初始化系統..."
                android:textColor="#00F3FF"
                android:textSize="16sp"
                android:fontFamily="monospace"
                android:letterSpacing="0.1" />

            <LinearLayout
                android:id="@+id/layoutActivation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="請在管理後台輸入激活碼"
                    android:textColor="#99FFFFFF"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txtActivationCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="----"
                    android:textColor="#FFFFFF"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.3"
                    android:shadowColor="#00F3FF"
                    android:shadowRadius="15" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
